indent_size = 4

[*.{csproj,xaml,xml}]
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2

[*.cshtml.cs]
dotnet_diagnostic.SA1649.severity = none
