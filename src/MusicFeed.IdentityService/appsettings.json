{
  // We configure issuer URI because identity service address differ for users who issue JWT and for public API service who verifies JWT.
  // Without configured issuer URI, IdentityServer will fill it from the request URI and issuer validation will fail.
  "issuerUri": null,

  // Forcing https endpoints in discovery document.
  // We need this, because service is running in Docker at http port, however is publicly available via ALB at https.
  "endpointsScheme": "https",

  "clients": [
    {
      "clientId": "musicfeed-web",

      "allowOfflineAccess": true,
      "accessTokenLifetime": 3600,
      "refreshTokenUsage": "oneTimeOnly",
      "absoluteRefreshTokenLifetime": 2592000,
      "slidingRefreshTokenLifetime": 1296000,
      "refreshTokenExpiration": "sliding",

      // https://stackoverflow.com/a/61855597/5740031
      "requireClientSecret": false,
      "requirePkce": true,

      "allowedGrantTypes": [
        "authorization_code"
      ],

      "allowedScopes": [
        "openid",
        "profile",
        "musicfeed-api"
      ],

      "allowedCorsOrigins": [
      ],

      "redirectUris": [
      ],

      "postLogoutRedirectUris": [
      ]
    }
  ],

  "authentication": {
    "google": {
      "clientId": "",
      "clientSecret": ""
    }
  },

  "connectionStrings": {
    "identityDB": ""
  },

  "logging": {
    "logLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "allowedHosts": "*"
}
