{
  "clients": [
    {
      "clientId": "musicfeed-api",

      "allowOfflineAccess": true,
      "accessTokenLifetime": 3600,
      "refreshTokenUsage": "oneTimeOnly",
      "absoluteRefreshTokenLifetime": 2592000,
      "slidingRefreshTokenLifetime": 1296000,
      "refreshTokenExpiration": "sliding",

      // https://stackoverflow.com/a/61855597/5740031
      "requireClientSecret": false,
      "requirePkce": true,

      "allowedGrantTypes": [
        "authorization_code"
      ],
      "redirectUris": [
        "https://localhost:44456/signin-oidc"
      ],
      "postLogoutRedirectUris": [
        "https://localhost:44456/signout-oidc"
      ],
      "allowedScopes": [
        "openid",
        "profile",
        "musicfeed-api"
      ],
      "allowedCorsOrigins": [
      ]
    }
  ],

  "authentication": {
    "google": {
      "clientId": "",
      "clientSecret": ""
    }
  },

  "connectionStrings": {
    "identityDB": ""
  },

  "logging": {
    "logLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "allowedHosts": "*"
}
